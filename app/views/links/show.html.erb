<%- model_class = Link -%>

<% shrt = "#{request.protocol}#{request.host_with_port}/" + @link.shorturl %>

  <p>Your really long link:  <%= @link.fullurl %></p>

  <h3>Your Shortened Link</h3>
  <h2><%= shrt %></h2>

<div id="example5">
  <div id="shareme" data-url="<%= shrt %>" data-text="Check out this link I shortened <%= shrt %>! #KnktMe"></div>
</div>


<div class="form-actions">
  <p>Not what you wanted?</p>
  <%= link_to "Kill it with fire!", link_path(@link),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
