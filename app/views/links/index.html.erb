<h1>Listing links</h1>

<table>
  <tr>
    <th>Fullurl</th>
    <th>Shorturl</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.fullurl %></td>
    <td><%= link.shorturl %></td>
    <td><%= link.user_id %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

